<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Therapy AI - Your AI companion for mental wellness">
    <title>Therapy AI</title>
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link rel="stylesheet" href="/css/styles.css">
    <script type="module" src="https://unpkg.com/@splinetool/viewer@1.10.7/build/spline-viewer.js"></script>
    <script src="/js/frontend-main_.js"></script>

</head>

<body>
    <!-- <a href="#main" class="skip-link">Skip to main content</a> -->
    <div class="main">
        <header class="header_bar" role="banner">
            <div class="title_name">
                <h1>Therapy AI</h1>
                <p class="subtitle">Your AI companion for mental wellness</p>
            </div>
            <div class="header-controls">
                <button class="theme-toggle" aria-label="Toggle dark/light theme">
                    <svg class="sun-and-moon" aria-hidden="true" width="24" height="24" viewBox="0 0 24 24">
                        <mask class="moon" id="moon-mask">
                            <rect x="0" y="0" width="100%" height="100%" fill="white" />
                            <circle cx="24" cy="10" r="6" fill="black" />
                        </mask>
                        <circle class="sun" cx="12" cy="12" r="6" mask="url(#moon-mask)" fill="currentColor" />
                        <g class="sun-beams" stroke="currentColor">
                            <line x1="12" y1="1" x2="12" y2="3" />
                            <line x1="12" y1="21" x2="12" y2="23" />
                            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
                            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
                            <line x1="1" y1="12" x2="3" y2="12" />
                            <line x1="21" y1="12" x2="23" y2="12" />
                            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
                            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
                        </g>
                    </svg>
                </button>
                <button class="settings-btn" aria-label="Open settings">
                    <img src="setting.png" alt="Settings icon" aria-hidden="true">
                </button>
            </div>
        </header>

        <main id="main" class="central-display-area" role="main">
            <div class="mood-indicator" role="status" aria-live="polite">How are you feeling today?</div>
            <div class="spline_center_circle" aria-label="Interactive 3D scene">
                <div class="loading-spinner" role="status" aria-label="Loading 3D scene"></div>
                <spline-viewer url="https://prod.spline.design/qFI3vVjsInDrKjYc/scene.splinecode"></spline-viewer>
            </div>
            <div class="interaction-hint" aria-hidden="true">Click to interact</div>
        </main>

        <footer class="bottom-toolbar" role="contentinfo">
            <button class="toolbar-btn notes-btn" aria-label="Open journal">
                <img src="/assets/ink_pen_24dp_E3E3E3_FILL0_wght400_GRAD0_opsz24.svg" alt="Journal icon" aria-hidden="true">
                <span class="toolbar-text">My Journal</span>
            </button>
            <div class="toolbar-center">
                <span class="toolbar-message" role="status" aria-live="polite">Hello there!</span>
                <div class="typing-indicator" aria-hidden="true">
                    <span></span><span></span><span></span>
                </div>
            </div>
            <button class="toolbar-btn summary-btn" aria-label="View AI summary">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                </svg>
                <span class="toolbar-text">AI Summary</span>
            </button>
        </footer>
    </div>

    <!-- AI Summary Modal -->
    <div id="summary-modal" class="modal-overlay hidden" aria-modal="true" role="dialog" aria-labelledby="summary-modal-title">
        <div class="modal-content">
            <header class="modal-header">
                <h2 id="summary-modal-title">Your AI Summary</h2>
                <button id="close-summary-modal" class="close-modal-btn" aria-label="Close summary">&times;</button>
            </header>
            <main class="modal-body">
                <div class="summary-placeholder">
                    <div class="typing-indicator active">
                        <span></span><span></span><span></span>
                    </div>
                    <p>Analyzing your journal...</p>
                </div>
                <div class="summary-result" style="display: none;">
                    <!-- Content will be injected here by main.js -->
                </div>
            </main>
        </div>
    </div>
    <script src="/js/frontend-main.js"></script>

</body>

</html>